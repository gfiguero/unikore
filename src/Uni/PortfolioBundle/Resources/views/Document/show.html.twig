{% extends 'UniPortfolioBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniPortfolioBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'document.show.title'|trans({'%id%':document.id}) }}{% endblock %}

{% block portfolio %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'document.show.title'|trans({'%id%':document.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('portfolio_document_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'document.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('portfolio_document_edit', { 'id': document.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'document.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'document.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'document.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'document.form.id'|trans }}</dt>
                                <dd>{% if document.id %}{{ document.id }}{% endif %}</dd>
                            <dt>{{ 'document.form.name'|trans }}</dt>
                                <dd>{% if document.name %}{{ document.name }}{% endif %}</dd>
                            <dt>{{ 'document.form.short'|trans }}</dt>
                                <dd>{% if document.short %}{{ document.short }}{% endif %}</dd>
                            <dt>{{ 'document.form.description'|trans }}</dt>
                                <dd>{% if document.description %}{{ document.description }}{% endif %}</dd>
                            <dt>{{ 'document.form.url'|trans }}</dt>
                                <dd>{% if document.url %}{{ document.url }}{% endif %}</dd>
                            <dt>{{ 'document.form.image'|trans }}</dt>
                                <dd>{% if document.image %}{{ document.image }}{% endif %}</dd>
                            <dt>{{ 'document.form.created_at'|trans }}</dt>
                                <dd>{% if document.createdat %}{{ document.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ document.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'document.form.updated_at'|trans }}</dt>
                                <dd>{% if document.updatedat %}{{ document.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ document.updatedat|ago }}){% endif %}</dd>                        
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'document.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'document.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'document.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

