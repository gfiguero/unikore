{% extends 'UniOfferBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniOfferBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'account.edit.title'|trans }}{% endblock %}

{% block offer %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'account.edit.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-edit">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'account.edit.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(editForm, { 'style': 'horizontal' }) }}
                            {{ form_widget(editForm) }}
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'account.edit.submit'|trans }}</button>
                                </div>
                            </div>
                        {{ form_end(editForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-edit -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block stylesheet %}
    {% block wysiwygcss %}{{ parent() }}{% endblock %}
{% endblock %}

{% block javascript %}
    {% block wysiwygjs %}{{ parent() }}{% endblock %}
{% endblock %}
