{% extends 'UniOfferBundle:Base:layout.html.twig' %}
{% use 'UniOfferBundle:Base:icons.html.twig' %}
{% use 'UniOfferBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'UniOfferBundle' %}

{% block title %}{{ 'account.show.title'|trans }}{% endblock %}

{% block offer %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'account.show.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-show">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'account.show.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'account.form.name'|trans }}</dt>
                                <dd>{{ account.name }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

