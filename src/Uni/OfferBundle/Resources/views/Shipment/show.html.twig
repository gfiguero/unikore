{% extends 'UniOfferBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniOfferBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'shipment.show.title'|trans({'%id%':shipment.id}) }}{% endblock %}

{% block offer %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'shipment.show.title'|trans({'%id%':shipment.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('offer_shipment_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'shipment.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('offer_shipment_edit', { 'id': shipment.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'shipment.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'shipment.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'shipment.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'shipment.form.user'|trans }}</dt>
                                <dd>{% if shipment.user %}{{ shipment.user|raw }}{% endif %}</dd>
                            <dt>{{ 'shipment.form.invoice'|trans }}</dt>
                                <dd>{% if shipment.invoice %}{{ shipment.invoice|raw }}{% endif %}</dd>
                            <dt>{{ 'shipment.form.description'|trans }}</dt>
                                <dd>{% if shipment.description %}{{ shipment.description|raw }}{% endif %}</dd>
                            <dt>{{ 'shipment.form.code'|trans }}</dt>
                                <dd>{% if shipment.code %}{{ shipment.code|raw }}{% endif %}</dd>
                            <dt>{{ 'shipment.form.amount'|trans }}</dt>
                                <dd>{% if shipment.amount %}{{ shipment.amount|raw|number_format(0, ',', '.') }}{% endif %}</dd>
                            <dt>{{ 'shipment.form.file'|trans }}</dt>
                                <dd>{% if shipment.filename %}<a target="_blank" href="{{ asset(vich_uploader_asset(shipment, 'file')) }}">{{ icon('paperclip') }}&nbsp;{{ shipment.filename }}</a>{% endif %}</dd>
                            <dt>{{ 'shipment.form.created_at'|trans }}</dt>
                                <dd>{% if shipment.createdat %}{{ shipment.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ shipment.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'shipment.form.updated_at'|trans }}</dt>
                                <dd>{% if shipment.updatedat %}{{ shipment.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ shipment.updatedat|ago }}){% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'shipment.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'shipment.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'shipment.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

