{% extends 'UniAdminBundle:Base:layout.html.twig' %}
{% use 'UniAdminBundle:Base:icons.html.twig' %}
{% use 'UniAdminBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'UniAdminBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'page.show.title'|trans({'%id%':page.id}) }}{% endblock %}

{% block admin %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'page.show.title'|trans({'%id%':page.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('admin_page_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'page.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('admin_page_edit', { 'id': page.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'page.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'page.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'page.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'page.form.id'|trans }}</dt>
                                <dd>{% if page.id %}{{ page.id }}{% endif %}</dd>
                            <dt>{{ 'page.form.name'|trans }}</dt>
                                <dd>{% if page.name %}{{ page.name }}{% endif %}</dd>
                            <dt>{{ 'page.form.domain'|trans }}</dt>
                                <dd>{% if page.domain %}{{ page.domain }}{% endif %}</dd>
                            <dt>{{ 'page.form.imagefile'|trans }}</dt>
                                <dd>{% if page.imagefile %}{{ page.imagefile }}{% endif %}</dd>
                            <dt>{{ 'page.form.brand'|trans }}</dt>
                                <dd>{% if page.brand %}{{ page.brand }}{% endif %}</dd>
                            <dt>{{ 'page.form.brand_primary_color'|trans }}</dt>
                                <dd>{% if page.brandprimarycolor %}{{ page.brandprimarycolor }}{% endif %}</dd>
                            <dt>{{ 'page.form.brand_secondary_color'|trans }}</dt>
                                <dd>{% if page.brandsecondarycolor %}{{ page.brandsecondarycolor }}{% endif %}</dd>
                            <dt>{{ 'page.form.main_title'|trans }}</dt>
                                <dd>{% if page.maintitle %}{{ page.maintitle }}{% endif %}</dd>
                            <dt>{{ 'page.form.main_subtitle'|trans }}</dt>
                                <dd>{% if page.mainsubtitle %}{{ page.mainsubtitle }}{% endif %}</dd>
                            <dt>{{ 'page.form.main_calltoaction'|trans }}</dt>
                                <dd>{% if page.maincalltoaction %}{{ page.maincalltoaction }}{% endif %}</dd>
                            <dt>{{ 'page.form.about_title'|trans }}</dt>
                                <dd>{% if page.abouttitle %}{{ page.abouttitle }}{% endif %}</dd>
                            <dt>{{ 'page.form.about_content'|trans }}</dt>
                                <dd>{% if page.aboutcontent %}{{ page.aboutcontent }}{% endif %}</dd>
                            <dt>{{ 'page.form.feature_title'|trans }}</dt>
                                <dd>{% if page.featuretitle %}{{ page.featuretitle }}{% endif %}</dd>
                            <dt>{{ 'page.form.socialmedia_title'|trans }}</dt>
                                <dd>{% if page.socialmediatitle %}{{ page.socialmediatitle }}{% endif %}</dd>
                            <dt>{{ 'page.form.feature_content'|trans }}</dt>
                                <dd>{% if page.featurecontent %}{{ page.featurecontent }}{% endif %}</dd>
                            <dt>{{ 'page.form.contact_title'|trans }}</dt>
                                <dd>{% if page.contacttitle %}{{ page.contacttitle }}{% endif %}</dd>
                            <dt>{{ 'page.form.contact_content'|trans }}</dt>
                                <dd>{% if page.contactcontent %}{{ page.contactcontent }}{% endif %}</dd>
                            <dt>{{ 'page.form.contact_phone'|trans }}</dt>
                                <dd>{% if page.contactphone %}{{ page.contactphone }}{% endif %}</dd>
                            <dt>{{ 'page.form.contact_email'|trans }}</dt>
                                <dd>{% if page.contactemail %}{{ page.contactemail }}{% endif %}</dd>
                            <dt>{{ 'page.form.contact_address'|trans }}</dt>
                                <dd>{% if page.contactaddress %}{{ page.contactaddress }}{% endif %}</dd>
                            <dt>{{ 'page.form.contact_schedule'|trans }}</dt>
                                <dd>{% if page.contactschedule %}{{ page.contactschedule }}{% endif %}</dd>
                            <dt>{{ 'page.form.keywords'|trans }}</dt>
                                <dd>{% if page.keywords %}{{ page.keywords }}{% endif %}</dd>
                            <dt>{{ 'page.form.social_share_image'|trans }}</dt>
                                <dd>{% if page.socialshareimage %}{{ page.socialshareimage }}{% endif %}</dd>
                            <dt>{{ 'page.form.social_share_title'|trans }}</dt>
                                <dd>{% if page.socialsharetitle %}{{ page.socialsharetitle }}{% endif %}</dd>
                            <dt>{{ 'page.form.social_share_description'|trans }}</dt>
                                <dd>{% if page.socialsharedescription %}{{ page.socialsharedescription }}{% endif %}</dd>
                            <dt>{{ 'page.form.fb_share_appid'|trans }}</dt>
                                <dd>{% if page.fbshareappid %}{{ page.fbshareappid }}{% endif %}</dd>
                            <dt>{{ 'page.form.created_at'|trans }}</dt>
                                <dd>{% if page.createdat %}{{ page.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ page.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'page.form.updated_at'|trans }}</dt>
                                <dd>{% if page.updatedat %}{{ page.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ page.updatedat|ago }}){% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'page.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'page.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'page.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

