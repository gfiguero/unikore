{% extends 'UniCatalogBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniCatalogBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'catalog.show.title'|trans({'%id%':catalog.id}) }}{% endblock %}

{% block catalog %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'catalog.show.title'|trans({'%id%':catalog.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('catalog_catalog_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'catalog.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('catalog_catalog_edit', { 'id': catalog.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'catalog.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'catalog.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'catalog.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'catalog.form.id'|trans }}</dt>
                                <dd>{% if catalog.id %}{{ catalog.id }}{% endif %}</dd>
                            <dt>{{ 'catalog.form.name'|trans }}</dt>
                                <dd>{% if catalog.name %}{{ catalog.name }}{% endif %}</dd>
                            <dt>{{ 'catalog.form.slug'|trans }}</dt>
                                <dd>{% if catalog.slug %}{{ catalog.slug }}{% endif %}</dd>
                            <dt>{{ 'catalog.form.created_at'|trans }}</dt>
                                <dd>{% if catalog.createdat %}{{ catalog.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ catalog.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'catalog.form.updated_at'|trans }}</dt>
                                <dd>{% if catalog.updatedat %}{{ catalog.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ catalog.updatedat|ago }}){% endif %}</dd>                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'catalog.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'catalog.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'catalog.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}

