{% extends 'UniCatalogBundle:Base:layout.html.twig' %}
{% use 'UniCatalogBundle:Base:wysiwyg.html.twig' %}
{% use 'UniCatalogBundle:Base:fileinput.html.twig' %}

{% trans_default_domain 'UniCatalogBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'product.new.title'|trans }}{% endblock %}

{% block catalog %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'product.new.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('catalog_product_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'product.index.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-new">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'product.new.form'|trans }}</h2>
                    </div>

                    <div class="panel-body">
                        <ul class="nav nav-pills">
                            <li role="presentation" class="active"><a data-toggle="tab" href="#identification">{{ 'product.section.identification'|trans }}</a></li>
                            <li role="presentation"><a data-toggle="tab" href="#trading">{{ 'product.section.trading'|trans }}</a></li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        {{ form_start(newForm, { 'style': 'horizontal' }) }}
                        <div class="tab-content">
                            <div id="identification" class="tab-pane fade in active" >
                                {{ form_row(newForm.name) }}
                                {{ form_row(newForm.short) }}
                                {{ form_row(newForm.description) }}
                                {{ form_row(newForm.imagefile) }}
                            </div>
                            <div id="trading" class="tab-pane fade" >
                                {{ form_row(newForm.cost) }}
                                {{ form_row(newForm.price) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" class="btn btn-primary">{{ icon('save fa-fw') }}&nbsp;{{ 'product.new.submit'|trans }}</button>
                            </div>
                        </div>
                        {{ form_end(newForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-new -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block stylesheet %}
    {% block wysiwygcss %}{{ parent() }}{% endblock %}
    {% block fileinputcss %}{{ parent() }}{% endblock %}
{% endblock %}

{% block javascript %}
    {% block wysiwygjs %}{{ parent() }}{% endblock %}
    {% block fileinputjs %}{{ parent() }}{% endblock %}
{% endblock %}


