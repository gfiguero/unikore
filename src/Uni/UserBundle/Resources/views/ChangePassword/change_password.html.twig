{% extends 'UniControlPanelBundle:Base:layout.html.twig' %}
{% use 'UniUserBundle:Base:icons.html.twig' %}
{% use 'UniUserBundle:Base:flashbag.html.twig' %}

{% trans_default_domain 'UniUserBundle' %}

{% block title %}{{ 'security.changepassword.title'|trans }}{% endblock %}

{% block controlpanel %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'security.changepassword.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-registration">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'security.changepassword.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, {'style' : 'horizontal', 'label_col' : 4 , 'widget_col' : 8, 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                            {{ form_widget(form) }}
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button type="submit" class="btn btn-primary">{{ 'security.changepassword.submit'|trans }}</button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-registration -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}
