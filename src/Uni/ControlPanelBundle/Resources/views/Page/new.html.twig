{% extends 'UniControlPanelBundle:Base:layout.html.twig' %}
{% use 'UniControlPanelBundle:Base:icons.html.twig' %}
{% use 'UniControlPanelBundle:Base:flashbag.html.twig' %}
{% use 'UniControlPanelBundle:Base:wysiwyg.html.twig' %}

{% trans_default_domain 'UniControlPanelBundle' %}

{% block title %}&nbsp;-&nbsp;{{ 'page.new.title'|trans }}{% endblock %}

{% block controlpanel %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'page.new.title'|trans }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('controlpanel_page_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'page.index.link'|trans }}</a>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-new">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'page.new.form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        {{ form_start(newForm, {'style' : 'horizontal' }) }}
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <h2>{{ 'page.brandinfo'|trans }}</h2>
                                </div>
                            </div>
                            {{ form_row(newForm.brand) }}
                            {{ form_row(newForm.name) }}
                            {{ form_row(newForm.domain) }}
                            {{ form_row(newForm.brand_primary_color) }}
                            {{ form_row(newForm.brand_secondary_color) }}
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button class="btn btn-default btn-primary" type="submit">{{ icon('save fa-fw') }}&nbsp;{{ 'page.new.submit'|trans }}</button>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <h2>{{ 'page.maininfo'|trans }}</h2>
                                </div>
                            </div>
                            {{ form_row(newForm.maintitle) }}
                            {{ form_row(newForm.mainsubtitle) }}
                            {{ form_row(newForm.maincalltoaction) }}
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button class="btn btn-default btn-primary" type="submit">{{ icon('save fa-fw') }}&nbsp;{{ 'page.new.submit'|trans }}</button>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <h2>{{ 'page.aboutinfo'|trans }}</h2>
                                </div>
                            </div>
                            {{ form_row(newForm.abouttitle) }}
                            {{ form_row(newForm.aboutcontent) }}
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button class="btn btn-default btn-primary" type="submit">{{ icon('save fa-fw') }}&nbsp;{{ 'page.new.submit'|trans }}</button>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <h2>{{ 'page.featureinfo'|trans }}</h2>
                                </div>
                            </div>
                            {{ form_row(newForm.featuretitle) }}
                            {{ form_row(newForm.featurecontent) }}
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button class="btn btn-default btn-primary" type="submit">{{ icon('save fa-fw') }}&nbsp;{{ 'page.new.submit'|trans }}</button>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <h2>{{ 'page.contactinfo'|trans }}</h2>
                                </div>
                            </div>
                            {{ form_row(newForm.contacttitle) }}
                            {{ form_row(newForm.contactcontent) }}
                            {{ form_row(newForm.contactphone) }}
                            {{ form_row(newForm.contactemail) }}
                            {{ form_row(newForm.contactaddress) }}
                            {{ form_row(newForm.contactschedule) }}
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button class="btn btn-default btn-primary" type="submit">{{ icon('save fa-fw') }}&nbsp;{{ 'page.new.submit'|trans }}</button>
                                </div>
                            </div>
                        {{ form_end(newForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-new -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}

{% block stylesheet %}
    {% block wysiwygcss %}{{ parent() }}{% endblock %}
{% endblock %}

{% block javascript %}
    {% block wysiwygjs %}{{ parent() }}{% endblock %}
    <script type="text/javascript">
        minicolorsOptions = {theme: 'bootstrap'};
        $('#uni_controlpanelbundle_page_brand_primary_color').minicolors(minicolorsOptions);
        $('#uni_controlpanelbundle_page_brand_secondary_color').minicolors(minicolorsOptions);
    </script>
{% endblock %}