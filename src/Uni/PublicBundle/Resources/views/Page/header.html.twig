{% block header %}
    <header id="header">
        <nav id="navbar" class="navbar navbar-default navbar-scroll navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#topbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% if page.brand %}<a class="navbar-brand page-scroll" href="#main">{{ page.brand|raw }}</a>{% endif %}
                </div>
                <div class="collapse navbar-collapse" id="topbar">
                    {% set topMenu = knp_menu_get( 'UniPublicBundle:Builder:topMenu' , [], {'page':page}) %}
                    {{ knp_menu_render(topMenu) }}
                </div>
            </div>   
        </nav>
    </header>
{% endblock %}