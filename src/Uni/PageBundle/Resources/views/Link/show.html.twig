{% extends 'UniPageBundle:Base:layout.html.twig' %}

{% trans_default_domain 'UniPageBundle' %}

{% block title %}{{ 'link.show.title'|trans({'%id%':link.id}) }}{% endblock %}

{% block admin %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'link.show.title'|trans({'%id%':link.id}) }}</h1>
                {% block flashbag %}{{ parent() }}{% endblock %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <a type="button" class="btn btn-default" href="{{ path('page_link_index') }}">{{ icon('list fa-fw') }}&nbsp;{{ 'link.index.link'|trans }}</a>
                    <a type="button" class="btn btn-primary" href="{{ path('page_link_edit', { 'id': link.id }) }}">{{ icon('edit fa-fw') }}&nbsp;{{ 'link.edit.link'|trans }}</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'link.delete.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-show">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'link.show.data'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>{{ 'link.form.id'|trans }}</dt>
                                <dd>{% if link.id %}{{ link.id }}{% endif %}</dd>
                            <dt>{{ 'link.form.name'|trans }}</dt>
                                <dd>{% if link.name %}{{ link.name }}{% endif %}</dd>
                            <dt>{{ 'link.form.title'|trans }}</dt>
                                <dd>{% if link.title %}{{ link.title }}{% endif %}</dd>
                            <dt>{{ 'link.form.description'|trans }}</dt>
                                <dd>{% if link.description %}{{ link.description }}{% endif %}</dd>
                            <dt>{{ 'link.form.image'|trans }}</dt>
                                <dd>{% if link.image %}{{ link.image }}{% endif %}</dd>
                            <dt>{{ 'link.form.created_at'|trans }}</dt>
                                <dd>{% if link.createdat %}{{ link.createdat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ link.createdat|ago }}){% endif %}</dd>
                            <dt>{{ 'link.form.updated_at'|trans }}</dt>
                                <dd>{% if link.updatedat %}{{ link.updatedat|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "d 'de' LLLL 'de' y - HH:mm") }}&nbsp;({{ link.updatedat|ago }}){% endif %}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-show -->

        <div id="page-modal">
            <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'link.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'link.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {{ form_start(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash-o fa-fw') }}&nbsp;{{ 'link.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}
